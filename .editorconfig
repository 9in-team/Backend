root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
continuation_indent_size = 4
indent_style = space
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 120
tab_width = 4

[*.{kt,kts}]
max_line_length = 160

[**/{test, integration-test}/**.{kt, kts}]
max_line_length = off

[**/{test, integration-test}/**.xml]
max_line_length = off

[*.yml]
indent_size = 2

[*.{bat, cmd}]
end_of_line = crlf

[*/{Jenkinsfile.groovy, JenkinsfileRollBack.groovy}]
indent_size = 2
